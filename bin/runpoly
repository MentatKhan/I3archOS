#!/bin/bash

killall -q polybar

PRIMARY=$(xrandr -q | grep primary | grep "\Wconnected" | awk -c '{ print $1}')
MONITOR=$PRIMARY polybar top &> /dev/null &
MONITOR=$PRIMARY polybar bot &> /dev/null &

MONS=$(xrandr -q | grep -v primary | grep "\Wconnected" | awk -c '{ print $1}')
for i in $MONS; do
MONITOR=$i polybar botside &> /dev/null &
done

